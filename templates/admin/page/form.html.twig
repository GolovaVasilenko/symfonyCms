{% extends('admin/admin_base.html.twig') %}

{% block body %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">{{ title }}</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Home</a></li>
                    <li class="breadcrumb-item active">Page List</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                    {{ form_start(form) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-7">
                                <div class="form-group">
                                    <label for="{{ form.title.vars.id }}">
                                        {{ form.title.vars.label }}
                                    </label>
                                    {{ form_widget(form.title) }}
                                </div>

                                <div class="form-group">
                                    <label for="{{ form.body.vars.id }}">
                                        {{ form.body.vars.label }}
                                    </label>
                                    {{ form_widget(form.body) }}
                                </div>
                           </div>
                            <div class="col-sm-12 offset-1 col-md-4">

                                <div class="form-group">
                                    <label for="{{ form.meta_title.vars.id }}">
                                        {{ form.meta_title.vars.label }}
                                    </label>
                                    {{ form_widget(form.meta_title) }}
                                </div>
                                <div class="form-group">
                                    <label for="{{ form.meta_description.vars.id }}">
                                        {{ form.meta_description.vars.label }}
                                    </label>
                                    {{ form_widget(form.meta_description) }}
                                </div>
                            </div>
                        </div>

                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}